# AIDEN Environment Variables

# ----- Model Configuration -----
# At least one API key below is required
USE_OPENROUTER=True
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL_ID=meta-llama/llama-4-maverick:free

GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL_ID=gemini-1.5-flash-latest

# ----- Voice Configuration -----
ENABLE_VOICE_MODE=True
# Required if voice mode is enabled
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL_ID=eleven_flash_v2_5
WHISPER_MODEL_SIZE=tiny.en
VOICE_ACTIVATION_THRESHOLD=0.02
MAX_SILENCE_DURATION=2.0

# ----- API Configuration -----
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ----- Performance -----
USE_UVLOOP=True

# ----- Agent Settings -----
ENABLE_WEB_SEARCH=True
SHOW_TOOL_CALLS=True
ENABLE_MARKDOWN=True
MAX_HISTORY_MESSAGES=5

# ----- Environment -----
ENVIRONMENT=development

# ----- Database -----
DATABASE_URL=sqlite:///../data/aiden_memory.db

# ----- Optional Integrations -----
MEM0_API_KEY=your_mem0_api_key_here
